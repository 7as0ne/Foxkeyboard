<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="2dp" android:right="2dp" android:top="3dp" android:bottom="3dp">
                <shape>
                    <solid android:color="?attr/keySpecialPressed" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="2dp" android:right="2dp" android:top="3dp" android:bottom="3dp">
                <shape>
                    <solid android:color="?attr/keySpecial" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>